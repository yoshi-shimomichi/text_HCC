<div class="row mb-3" id="comment-form">
  <%= form_with model: [post, comment] do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="mb-3">
      <%= f.text_area :body, class: 'form-control mb-3' %>
        <div class="row d-flex justify-content-between">
          <div class="col">
            <%= f.file_field :comment_image, class: "form-control mb-3", accept: 'image/*' %>
            <%= f.hidden_field :comment_image_cache %>
          </div>
          <div class="col-2">
            <%= f.submit t('helpers.submit.comment'), class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>