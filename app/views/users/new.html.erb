<% content_for(:title, t('.title')) %>
  <div class="top_title">
    <%= t('users.new.title') %>
  </div>
  <div class="main_content">
      <%= form_with model: @user , local: true do |f| %>
        <%= render 'shared/error_messages' , object: f.object %>
        <div class="mb-3">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control', placeholder:'30文字以内で入力してください' %>
        </div>
        <div class="mb-3">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control', placeholder:'4文字以上で入力してください' %>
        </div>
        <div class="mb-3">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <%= f.fields_for :care_person do |c| %>
          <%= c.hidden_field :age %>
          <%= c.hidden_field :bio %>
        <% end %>
        <div class="btn_submit">
        <%= f.submit t('helpers.submit.create') , class: 'btn btn_text' %>
        </div>
      <% end %>
    <div class="policy_content">
      <%= link_to '利用規約', page_path("term_of_service"), class:'link-dark text-decoration-none' %>
      <%= link_to 'プライバシーポリシー', page_path("privacy_policy"), class:'link-dark text-decoration-none' %>
    </div>
</div>