<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-2">
      <%= render 'shared/sideber' %>
    </div>
    <div class="col-9">
      <div class="container pt-3">
        <div class="row">
          <div class="col-md-10 offset-md-1">
            <h1 class="float-left mb-5"><%= t('.title') %></h1>
            <div class="row mb-3">
              <div class="col-4 mb-3">
                <%= image_tag current_user.avatar_url, size: '150x150' %>
              </div>
              <div class="col">
                <div class="col-6 mb-3">
                  <%= t(User.human_attribute_name(:name)) %>
                  <span class="bg-body-secondary"><%= current_user.name %></span>
                </div>
                <div class="col">
                  <%= t(User.human_attribute_name(:email)) %>
                  <span class="bg-body-secondary"><%= current_user.email %></span>
                </div>
              </div>
              <div class="row mb-3">
                <%= t(User.human_attribute_name(:bio)) %>
                <div class="border bio bg-body-secondary">
                  <%= current_user.bio %>
                  
                </div>
              </div>
            </div>
            <%= link_to t('helpers.submit.edit'), edit_profile_path, class: 'btn btn-primary float-end' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>