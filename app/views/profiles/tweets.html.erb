<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-2">
      <%= render 'shared/sideber' %>
    </div>
    <div class="col-9">
      <div class="row justify-content-center">
        <% if @posts.present? %>
          <%= render 'profiles/profile_post', { posts: @posts } %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>