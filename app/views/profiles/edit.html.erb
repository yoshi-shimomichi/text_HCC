<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-2">
      <%= render 'shared/sideber' %>
    </div>
    <div class="col-9">
      <div class="container pt-3">
        <div class="row">
          <div class="col-md-10 offset-md-1">
            <h1 class="float-left mb-5"><%= t('.title') %></h1>
            <%= form_with model: @user, url: profile_path, method: :put do |f| %>
              <%= render 'shared/error_messages', object: f.object %>
              <div class="row mb-3">
                <div class="col-4 mb-3">
                  <%= image_tag @user.avatar.url, id: 'preview', size: '150x150' %>
                  <%= f.label :avatar %>
                  <%= f.file_field :avatar, class: "form-control", accept: 'image/*' %>
                  <%= f.hidden_field :avatar_cache %>
                </div>
                <div class="col">
                  <div class="col-6 mb-3">
                    <%= f.label :name %>
                    <%= f.text_field :name, class: "form-control" %>
                  </div>
                  <div class="col">
                    <%= f.label :email %>
                    <%= f.email_field :email, class: "form-control" %>
                  </div>
                </div>
              </div>
              <div class="row mb-3">
                <%= f.label :bio %>
                <%= f.text_area :bio, class: "form-control", rows:"3" %>
              </div>
              <%= f.submit nil, class: "btn btn-primary float-end" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>