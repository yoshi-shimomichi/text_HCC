<% content_for(:title, t('.title')) %>
  <div class="top_title">
    <%= t('.title') %>
  </div>
  <div class="main_content">
    <%= form_with url: login_path, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :email %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="btn_submit">
        <%= f.submit t('.login') , class: 'btn btn_text' %>
        </div>
      <% end %>
    <div class="policy_content">
      <%= link_to '利用規約', page_path("term_of_service"), class:'link-dark text-decoration-none' %>
      <%= link_to 'プライバシーポリシー', page_path("privacy_policy"), class:'link-dark text-decoration-none' %>
    </div>
</div>
